/* pages/Exam/cet/cet.wxss */


page{
  width: 100%;
  height: 100%;
}
.global{
  width: 100%;
  height: 100%;
  background-size: cover;
  display: inline-block;
  background-image: linear-gradient(to bottom right,rgb(41, 46, 70),rgb(84, 91, 124));
}
.card{
  z-index: 0;
  height: 85%;
  width: 90%;
  margin-left: 5%;
  margin-right: 10%;
  margin-top: 10%;
  border-radius: 20rpx; 
  /* color:black; */
  /* box-shadow: 6px 6px 10px 0px rgb(136,115,102); */
}
.card .card-image{
  z-index: 3;
  height: 30%;
  width: 100%;
  border-radius: 20rpx; 
  position: relative;
  box-shadow: 3px 3px 10px 0px rgb(41, 46, 70);

}
.card .main-card-image{
  z-index: 3;
  height: 100%;
  width: 100%;
  border-radius: 20rpx; 
}
.card .card-image .ctitle{
  z-index: 3;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin-top: 25%;
  text-align:center; 
  font-weight: bolder;
  position: absolute;
  height: 45%;
  width: 100%;
  font-size: 55rpx; 
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  line-height: 65rpx;
  color: rgb(230, 230, 234);
}

.card .card-content{
  display: inline-block;
  position: relative;
  height: 70%;
  width: 96%;
  text-align: center;
  margin-left: 2%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: rgb(216, 141, 106);
  box-shadow: 3px 3px 10px 0px rgb(41, 46, 70);
}

.card .card-content .card-content-textblock{
  margin-left: 5%;
  margin-top: 7%;
  font-size: 30rpx;
  font-style: ‘Franklin Gothic Medium’, ‘Arial Narrow’, Arial, sans-serif;
  width: 90%;
  color: snow;
  height: 20%;
  padding-top: 3%;
  box-shadow: 3px 3px 10px 0px rgba(209, 110, 64, 0.808);
  background-color: rgb(55,49,63);
  border-radius: 20rpx;
}

.card-button{
  line-height: 50rpx;
  width: 40%;
  height: 7%;
  margin-top: 7%;
  margin-left: 30%;
  border-radius: 30rpx;
  background-color: rgb(170, 102, 101);
  font-size: 30rpx;
  text-align: center;
  color:snow;
  box-shadow: 3px 3px 10px 0px rgba(202, 108, 65, 0.808);
}

.input-title{
  margin-top: 10%; 
  font-size: 35rpx;
  display: inline-block;
}

input {
    margin-top: 3%;
    margin-left: 3%;
    text-align: center;
    display: inline-block;
    width: 80%;
    height: 35%;
    background-color: rgb(173,136,134);
    border-radius: 25rpx;

}

.card .verifyCode{
  padding: 2px;
  display: inline-flex;
  flex-direction: column;
  width: 200rpx;
  height: 60%;
}

.card .slogan{
  padding-top: 10%;
  width: 100%;
  height: 20%;
  font-style: italic;
  text-shadow: 2px 2px 4px rgb(54, 54, 60);
  color: rgb(74, 75, 84);
}