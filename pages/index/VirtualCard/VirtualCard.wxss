/* pages/lg/lg.wxss */

page {
    width: 100%;
    height: 100%;
}

.global {
    width: 100%;
    height: 100%;
    background-size: cover;
    display: inline-block;
    background-image: linear-gradient(to bottom right, #a36336, #fad689);
}

.card {
    height: 80%;
    width: 90%;
    margin-left: 5%;
    margin-right: 10%;
    margin-top: 10%;
    margin-bottom: 5%;
    border-radius: 20rpx;
    color: black;
}

.card .card-image {
    z-index: 1;
    height: 40%;
    width: 100%;
    border-radius: 20rpx;
    position: relative;
    box-shadow: 6px 6px 10px 0px #a36336;
}

.card .main-card-image {
    height: 100%;
    width: 100%;
    border-radius: 20rpx;
}

.card .card-content {
    width: 100%;
    height: 50%;
}

.card .card-content .card-content-main {
    width: 80%;
    height: 100%;
    margin-left: 10%;
    border-top-right-radius: 20rpx;
    border-top-left-radius: 20rpx;
    background-color: #fad689;
    display: inline-block;
    box-shadow: 6px 6px 10px 0px #a36336;
}

.card-content-main .card-title {
    width: 100%;
    height: 15%;
    text-align: center;
    padding-top: 15rpx;
    font-size: 35rpx;
}

.card-content-main .card-2Dimage {
    width: 80%;
    height: 80%;
    margin-left: 10%;
    margin-top: 1%;
    border-radius: 20rpx;
    background-color: #dcb879;
    display: inline-block;
}

.card .card-content-tag {
    z-index: -1;
    width: 80%;
    height: 10%;
    border-bottom-right-radius: 25rpx;
    border-bottom-left-radius: 25rpx;
    margin-left: 10%;
    padding-top: 15rpx;
    font-size: 40rpx;
    text-align: center;
    background-color: #fad689;
    box-shadow: 6px 6px 10px 0px #a36336;
}

canvas {
    margin-left: 4%;
    margin-top: 3%;
    height: 350rpx;
    widows: 350rpx;
    background-color: #fad689;
}
