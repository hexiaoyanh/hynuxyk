/**index.wxss**/

page {
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
}
.main{
    height: 100%;
    width: 100%;
}
.upline{
    display: block;
    height: 25%;
    width: 100%;
}
.upline button{
    padding-top: 50rpx;
    width: 100%;
    height: 100%;
    float: left;
    background-color: #076BAF;
}
.upline button image{
    display: inline-block;
    height:80rpx;
    width: 100rpx;
}
.upline button text{
    font-size: 40rpx;
    display: block;
    color: white;
}

.middleline{
    display: flex;
    width: 100%;
    height: 40%;
    background: #EEEEEE;
    align-items: center;
    justify-content: center;
}

#message{
    height: 50%;
    width: 80%;
    border-radius: 20rpx;
    overflow: hidden;
}
#message view{
    height: 50%;
    width: 100%;
}

#message text{
    display: inline-block;
    height: 100%;
    vertical-align: bottom;
    padding-top: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.menu{
    display: block;
    height: 35%;
    width: 100%;
    bottom: 0;
}
.menu_list{
    height: 50%;
    width: 100%;
}
.menu_list button{
    height: 100%;
    padding-top: 50rpx;
    align-items: center;
}
.menu_list image{
    margin-left: 80rpx; 
    display: block;
    height: 30%;
    width: 24%;
}
#name{
    height: 50%;
    width: 100%;
    font-size: 60rpx;
}
#money{
    height: 50%;
    width: 100%;
    text-align: right;
    font-size: 60rpx;
    color: white;
}
.pic{
    height:100%;
    width:33.3% ;
    float:left;
}