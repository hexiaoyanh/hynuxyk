/* pages/grade/grade.wxss */
page{
  width: 100%;
  height: 100%;
}
.global{
  width: 100%;
  height: 100%;
  background-size: cover;
  display: inline-block;
  background-image: linear-gradient(to bottom right,rgb(38,31,48),rgb(139,115,135));
}
.card{
  height: 25%;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 50rpx;
  margin-bottom: 5%;
  border-radius: 20rpx; 
  color:black;
  box-shadow: 6px 6px 10px 0px rgb(38,31,48);
}



.card .card-image{
  height: 100%;
  width: 100%;
  border-radius: 20rpx; 
  position: relative;
}
.card .main-card-image{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  /* border-bottom-right-radius: 0; 
  border-bottom-left-radius: 0; 
  border-top-right-radius: 20rpx; 
  border-top-left-radius: 20rpx;  */
}
.card .card-content{
  width: 100%;
  height: 40%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: #FEDFE1;
  display: inline-block
}
.card .card-content .card-content-textblock{
  margin-left: 10%;
  margin-top: 3%;
  font-size: 30rpx;
  font-style: ‘Franklin Gothic Medium’, ‘Arial Narrow’, Arial, sans-serif;
  width: 80%;
  height: 30%;
  text-align: center;
  padding-top: 3%;
  box-shadow: 3px 3px 10px 0px rgb(38,31,48);
  background-color: #F4A7B9;
  border-radius: 20rpx;
}

.card-text-void{
  width: 100%;
  height: 10%;
  text-align: center;
  color: rgb(218, 119, 73);
  font-size: 30rpx;
}
.cells{
  margin-top: 5%;
  height: 60%;
  width: 100%;
}

.card-content-mini{
  position: relative;
  z-index: 1;
  width: 76%;
  height: 22%;
  margin-left:12%; 
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: rgb(171, 152, 189);
  display: inline-block
}
.card-mini{
  position: relative;
  z-index: 2;
  height: 15%;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 30rpx;
  border-radius: 20rpx; 
  color:black;
  background-color: rgb(67, 56, 83);
  box-shadow: 6px 6px 10px 0px rgb(38,31,48);
}

.table {
  border: 0px solid darkgray;
  width: 100%;
  height: 100%;
}
.tr-f {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1.3rem;
  align-items: center;
}
.th {
  font-size: 50rpx;
  color: rgb(139, 114, 136);
  font-weight: bolder;
  overflow : hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width:40%;
  justify-content: center;
}

.td{
  font-size: 30rpx;
  color: rgb(86, 66, 112);
  overflow : hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width:40%;
  justify-content: center;
}
