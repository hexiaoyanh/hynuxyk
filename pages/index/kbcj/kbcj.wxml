<!--pages/JW/JW.wxml-->
<view class="global">

  <view style="margin-top:{{stateH}}px;height:{{stateH}}px;width 5%">
    <navigator style="height:100%;width:100%;padding-left:2%" open-type="navigateBack">
      <text class="cuIcon-back" style="font-size:40rpx"></text>
    </navigator>
  </view>

  <view class="card">
    <view class="card-image">
      <image class="main-card-image" src="https://wx4.sinaimg.cn/mw690/006blzWmgy1g8irety6ufj30q60dbab8.jpg" mode="aspectFill"></image>
    </view>
    <view class="card-content animated slideInDown">
      <form bindsubmit="login">
        <view class="card-content-main">
          <view class="card-content-textblock">
            <view class="input-title">教务网学号</view>
            <input type='text' name='username' placeholder='请输入账号' value='{{username}}'></input>
          </view>
          <view class="card-content-textblock">
            <view class="input-title">教务网密码</view>
            <input type='password' name='password' placeholder='请输入密码' value='{{password}}'></input>
          </view>
        </view>
        <view class="card-content-tag ">
        <button form-type='submit' type="submit" class="card-button animated slideInLeft">登陆                   </button>
        </view>
      </form>
    </view>

    <view class="slogan">
      <text>
        "Is this the real life? Is this just fantasy?"
      </text>
      <view style="text-align:right;margin-top:10rpx">
        <text >———Queen</text>
      </view>
    </view>
  </view>
</view>
