/* pages/bill/bill.wxss */
page{
  width: 100%;
  height: 100%;
}
.global{
  width: 100%;
  height: 100%;
  position: absolute;
  background-size: cover;
  display: inline-block;
  background-image: linear-gradient(to bottom right,#7DB9DE,rgb(211, 222, 226));
}

.card{
  display: inline-block;
  height: 90%;
  width: 80%;

  margin-left: 10%;
  margin-top: 50rpx;
  margin-bottom: 5%;
  border-radius: 20rpx; 
  color:black;
  box-shadow: 6px 6px 10px 0px #7DB9DE;
}
.card .card-image{
  height: 20%;
  width: 100%;
  border-radius: 20rpx; 
  position: relative;
}
.card .main-card-image{
  height: 100%;
  width: 100%;
  border-bottom-right-radius: 0; 
  border-bottom-left-radius: 0; 
  border-top-right-radius: 20rpx; 
  border-top-left-radius: 20rpx;
}

.card .card-image .ctitle{
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin-top: 25%;
  text-align:left; 
  font-weight: bolder;
  position: absolute;
  height: 38%;
  width: 100%;
  color:snow;
  font-size: 50rpx; 
}
.card .card-content{
  width: 100%;
  height: 80%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: rgb(211, 222, 226);
  display: inline-block
}
.card .card-content .card-content-textblock{
  margin-left: 2%;
  margin-top: 3%;
  font-style: ‘Franklin Gothic Medium’, ‘Arial Narrow’, Arial, sans-serif;
  width: 96%;
  height: 9%;
  box-shadow: 3px 3px 10px 0px #58B2DC;
  background-color: #7DB9DE;
  border-radius: 20rpx;
}

.card-text-time{
  position: relative;
  height: 100%;
  width: 20%;
  display: inline-block;
}
.times-day{
  padding-left: 10%;
  position: absolute;
  color: #2E5C6E;
  font-size: 35rpx;
  text-align: left;
  width: 100%;
  height: 50%;
  
}
.times-detail{
  padding-left: 10%;
  position: absolute;
  margin-top: 50rpx;
  text-align: left;
  color: #2E5C6E;
  width: 100%;
  height: 50%;
  font-size: 30rpx;

}
.card-state-image{
  height: 100%;
  width:15%;
  display: inline-block;
  position: relative;
}
.card-content-textblock .state-image{
  position: absolute;
  padding-top: 15%; 
  padding-left: 15%;
  height: 85%;
  width: 80%;
}
.card-text-class{
  height: 100%;
  width: 35%;
  display: inline-block;
  position: relative;
}
.text-class{
  position: absolute;
  color: #2E5C6E;
  font-size: 35rpx;
  text-align: left;
  width: 100%;
  height: 50%;
}
.text-detail{
  overflow : hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  margin-top: 50rpx;
  text-align: left;
  color: #2E5C6E;
  width: 100%;
  height: 50%;
  font-size: 26rpx;
}
.card-text-void{
  width: 100%;
  height: 10%;
  text-align: center;
  color: #2E5C6E;
  font-size: 30rpx;
}
.card-text-money{
  height: 100%;
  width: 30%;
  display: inline-block;
  position: relative;
}
.money{
  padding-left:15%;
  padding-top: 15%; 
  color: #2E5C6E;
  height: 100%;
  width: 100%;
  position: absolute;
  font-size: 40rpx;
}
